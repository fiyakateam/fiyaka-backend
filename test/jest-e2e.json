{
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "rootDir": ".",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "reporters": [
    "default",
    [
      "../node_modules/jest-html-reporter",
      {
        "pageTitle": "Test Report"
      }
    ]
  ],
  "moduleDirectories": ["node_modules", "src"]
}
